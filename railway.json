{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "/app/compose/production/django/Dockerfile"
    },
    "deploy": {
        "runtime": "LEGACY",
        "numReplicas": 1,
        "startCommand": "/start",
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
